<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Verifica se os nomes de classes seguem a convenção Java -->
        <module name="TypeName"/>

        <!-- Verifica se os métodos seguem a convenção de nomenclatura -->
        <module name="MethodName"/>

        <!-- Garante que as variáveis seguem a convenção de nomenclatura -->
        <module name="VariableName"/>

        <!-- Verifica a presença de Javadoc em classes e métodos públicos -->
        <module name="JavadocType"/>
        <module name="JavadocMethod"/>
    </module>

    <!-- Impede que linhas ultrapassem 100 caracteres -->
    <module name="LineLength">
        <property name="max" value="100"/>
    </module>

    <!-- Garante que há um espaço entre palavras-chave e parênteses -->
    <module name="WhitespaceAfter">
        <property name="tokens" value="if, for, while, switch, catch"/>
    </module>
</module>
